/* MB Construction - Premium Futuristic Website Styles */

/* Import Premium Fonts */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Orbitron:wght@400;500;600;700;800;900&display=swap');

/* CSS Variables - Premium Color System */
:root {
  /* Base Colors - Dark Theme (Default) */
  --color-white: #ffffff;
  --color-light-grey: #f8fafc;
  --color-grey: #64748b;
  --color-dark-grey: #334155;
  --color-black: #000000;
  
  /* Theme Colors - Dark Mode (Black) */
  --color-background: #000000;
  --color-surface: #111111;
  --color-text: #ffffff;
  --color-text-secondary: #a1a1aa;
  --color-border: rgba(255, 255, 255, 0.1);
  
  /* Blue Palette */
  --color-blue-50: #eff6ff;
  --color-blue-100: #dbeafe;
  --color-blue-500: #3b82f6;
  --color-blue-600: #2563eb;
  --color-blue-700: #1d4ed8;
  --color-blue-900: #1e3a8a;
  
  /* Gold Palette */
  --color-gold-400: #fbbf24;
  --color-gold-500: #f59e0b;
  --color-gold-600: #d97706;
  
  /* Gradients */
  --gradient-primary: linear-gradient(135deg, var(--color-gold-500) 0%, var(--color-gold-600) 100%);
  --gradient-secondary: linear-gradient(135deg, var(--color-blue-600) 0%, var(--color-blue-700) 100%);
  --gradient-hero: linear-gradient(135deg, rgba(0, 0, 0, 0.95) 0%, rgba(17, 17, 17, 0.9) 100%);
  --gradient-glass: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 100%);
  
  /* Glassmorphism */
  --glass-bg: rgba(255, 255, 255, 0.1);
  --glass-border: rgba(255, 255, 255, 0.2);
  --glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  --glass-blur: blur(20px);
  
  /* Shadows */
  --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 20px 25px rgba(0, 0, 0, 0.1);
  --shadow-glow: 0 0 20px rgba(245, 158, 11, 0.3);
  --shadow-glow-blue: 0 0 20px rgba(59, 130, 246, 0.3);
  
  /* Typography */
  --font-primary: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
  --font-display: 'Orbitron', monospace;
  
  /* Spacing */
  --space-1: 0.25rem;
  --space-2: 0.5rem;
  --space-3: 0.75rem;
  --space-4: 1rem;
  --space-5: 1.25rem;
  --space-6: 1.5rem;
  --space-8: 2rem;
  --space-10: 2.5rem;
  --space-12: 3rem;
  --space-16: 4rem;
  --space-20: 5rem;
  --space-24: 6rem;
  
  /* Border Radius */
  --radius-sm: 0.375rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  --radius-2xl: 1.5rem;
  --radius-full: 9999px;
  
  /* Transitions */
  --transition-fast: 0.15s ease-out;
  --transition-normal: 0.3s ease-out;
  --transition-slow: 0.5s ease-out;
  
  /* Z-Index */
  --z-dropdown: 1000;
  --z-sticky: 1020;
  --z-fixed: 1030;
  --z-modal: 1050;
  --z-tooltip: 1070;
}

/* Reset & Base Styles - Performance Optimized */
*,
*::before,
*::after {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* Performance optimizations */
* {
  -webkit-tap-highlight-color: transparent;
}

img {
  max-width: 100%;
  height: auto;
  display: block;
}

/* GPU acceleration for animations */
.glass-card,
.btn,
.social-link,
.project-card,
.service-card {
  will-change: transform;
  transform: translateZ(0);
}

html {
  scroll-behavior: smooth;
  font-size: 14px; /* Reduced from 16px to make all fonts smaller */
}

body {
  font-family: var(--font-primary);
  line-height: 1.6;
  color: var(--color-text);
  background: var(--color-background);
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  transition: background-color var(--transition-normal), color var(--transition-normal);
}

/* Light Theme - Colorful & Vibrant */
[data-theme="light"] {
  --color-background: #f8faff;
  --color-surface: #f1f5ff;
  --color-text: #1e293b;
  --color-text-secondary: #334155;
  --color-border: rgba(59, 130, 246, 0.15);
  
  /* Enhanced color palette for light mode */
  --color-accent-blue: #3b82f6;
  --color-accent-purple: #8b5cf6;
  --color-accent-green: #10b981;
  --color-accent-orange: #f59e0b;
  --color-accent-pink: #ec4899;
  --color-accent-teal: #14b8a6;
  --color-accent-indigo: #6366f1;
  --color-accent-cyan: #06b6d4;
  --color-accent-emerald: #059669;
  --color-accent-rose: #f43f5e;
  --color-accent-violet: #7c3aed;
  --color-accent-amber: #d97706;
  
  /* Update glassmorphism for light theme */
  --glass-bg: rgba(255, 255, 255, 0.85);
  --glass-border: rgba(59, 130, 246, 0.2);
  --glass-shadow: 0 8px 32px rgba(59, 130, 246, 0.12);
  
  /* Enhanced colorful gradients for light theme */
  --gradient-hero: linear-gradient(135deg, rgba(248, 250, 255, 0.95) 0%, rgba(241, 245, 255, 0.9) 100%);
  --gradient-blue: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(147, 197, 253, 0.08) 100%);
  --gradient-purple: linear-gradient(135deg, rgba(139, 92, 246, 0.15) 0%, rgba(196, 181, 253, 0.08) 100%);
  --gradient-green: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(167, 243, 208, 0.08) 100%);
  --gradient-orange: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(253, 230, 138, 0.08) 100%);
  --gradient-pink: linear-gradient(135deg, rgba(236, 72, 153, 0.15) 0%, rgba(251, 207, 232, 0.08) 100%);
  --gradient-teal: linear-gradient(135deg, rgba(20, 184, 166, 0.15) 0%, rgba(153, 246, 228, 0.08) 100%);
  --gradient-indigo: linear-gradient(135deg, rgba(99, 102, 241, 0.15) 0%, rgba(199, 210, 254, 0.08) 100%);
  --gradient-cyan: linear-gradient(135deg, rgba(6, 182, 212, 0.15) 0%, rgba(165, 243, 252, 0.08) 100%);
  --gradient-emerald: linear-gradient(135deg, rgba(5, 150, 105, 0.15) 0%, rgba(167, 243, 208, 0.08) 100%);
  --gradient-rose: linear-gradient(135deg, rgba(244, 63, 94, 0.15) 0%, rgba(251, 207, 232, 0.08) 100%);
  --gradient-violet: linear-gradient(135deg, rgba(124, 58, 237, 0.15) 0%, rgba(196, 181, 253, 0.08) 100%);
  --gradient-amber: linear-gradient(135deg, rgba(217, 119, 6, 0.15) 0%, rgba(253, 230, 138, 0.08) 100%);
}

/* Light theme specific adjustments - Faint Blue */
[data-theme="light"] .navbar {
  background: rgba(248, 250, 255, 0.95);
  backdrop-filter: blur(20px);
  border-bottom: 1px solid rgba(59, 130, 246, 0.15);
}

[data-theme="light"] .navbar.scrolled {
  background: rgba(248, 250, 255, 0.98);
  box-shadow: 0 4px 20px rgba(59, 130, 246, 0.1);
}

[data-theme="light"] .hero-overlay {
  background: linear-gradient(135deg, rgba(248, 250, 255, 0.9) 0%, rgba(241, 245, 255, 0.8) 100%);
}

[data-theme="light"] .about {
  background: var(--gradient-blue);
}

[data-theme="light"] .services {
  background: var(--gradient-green);
}

[data-theme="light"] .projects {
  background: var(--gradient-purple);
}

[data-theme="light"] .testimonials {
  background: var(--gradient-orange);
}

[data-theme="light"] .owner {
  background: var(--gradient-teal);
}

[data-theme="light"] .careers {
  background: var(--gradient-rose);
}

[data-theme="light"] .contact {
  background: var(--gradient-cyan);
}

[data-theme="light"] .footer {
  background: var(--color-surface);
  border-top: 1px solid var(--glass-border);
}

[data-theme="light"] .footer-brand h3 {
  color: #1e293b !important;
}

[data-theme="light"] .footer-brand p {
  color: #475569 !important;
}

[data-theme="light"] .footer-column h4 {
  color: #1e293b !important;
}

[data-theme="light"] .footer-column ul li a {
  color: #475569 !important;
}

[data-theme="light"] .footer-column ul li a:hover {
  color: var(--color-accent-blue) !important;
}

[data-theme="light"] .footer-bottom p {
  color: #475569 !important;
}

/* Enhanced text contrast and visibility for light mode */
[data-theme="light"] .hero-subtitle,
[data-theme="light"] .section-subtitle,
[data-theme="light"] .service-description,
[data-theme="light"] .project-info p,
[data-theme="light"] .testimonial-content p,
[data-theme="light"] .owner-description p,
[data-theme="light"] .contact-card p,
[data-theme="light"] .footer-column ul li a {
  color: #1e293b;
}

[data-theme="light"] .nav-menu {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: var(--radius-xl);
  padding: var(--space-2) var(--space-6);
  border: 1px solid rgba(59, 130, 246, 0.15);
  box-shadow: 0 4px 20px rgba(59, 130, 246, 0.08);
}

[data-theme="light"] .nav-link {
  color: #475569;
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-md);
  transition: all var(--transition-normal);
}

[data-theme="light"] .nav-link:hover,
[data-theme="light"] .nav-link.active {
  color: #1e293b;
  background: rgba(59, 130, 246, 0.1);
}

[data-theme="light"] .nav-link:hover::after,
[data-theme="light"] .nav-link.active::after {
  background: linear-gradient(90deg, var(--color-accent-blue), var(--color-accent-purple));
}

[data-theme="light"] .brand-name {
  color: #1e293b;
}

[data-theme="light"] .brand-tagline {
  color: #64748b;
}

[data-theme="light"] .theme-toggle {
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid rgba(59, 130, 246, 0.2);
  color: #1e293b;
}

[data-theme="light"] .theme-toggle:hover {
  background: rgba(59, 130, 246, 0.1);
  border-color: rgba(59, 130, 246, 0.3);
  box-shadow: 0 4px 16px rgba(59, 130, 246, 0.15);
}

[data-theme="light"] .nav-toggle span {
  background: #1e293b;
}

[data-theme="light"] .stat-label,
[data-theme="light"] .achievement-label,
[data-theme="light"] .owner-title,
[data-theme="light"] .testimonial-author span,
[data-theme="light"] .footer-bottom p {
  color: #475569;
}

/* Careers section specific light mode styling */
[data-theme="light"] .careers-info h3,
[data-theme="light"] .service-title,
[data-theme="light"] .contact-card h3,
[data-theme="light"] .form-title {
  color: #1e293b;
}

[data-theme="light"] .benefits-list li {
  color: #334155;
}

[data-theme="light"] .benefits-list li::before {
  color: var(--color-accent-rose);
}

/* Contact section specific light mode styling */
[data-theme="light"] .form-group label {
  color: #1e293b;
  font-weight: 600;
}

[data-theme="light"] .form-group input,
[data-theme="light"] .form-group select,
[data-theme="light"] .form-group textarea {
  background: rgba(255, 255, 255, 0.9);
  border: 2px solid rgba(59, 130, 246, 0.2);
  color: #1e293b;
}

[data-theme="light"] .form-group input:focus,
[data-theme="light"] .form-group select:focus,
[data-theme="light"] .form-group textarea:focus {
  border-color: var(--color-accent-cyan);
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 0 0 3px rgba(6, 182, 212, 0.1);
}

[data-theme="light"] .form-group input::placeholder,
[data-theme="light"] .form-group textarea::placeholder {
  color: #64748b;
}

/* Enhanced glass cards for light mode */
[data-theme="light"] .glass-card {
  background: rgba(255, 255, 255, 0.9);
  border: 2px solid rgba(59, 130, 246, 0.15);
  box-shadow: 0 8px 32px rgba(59, 130, 246, 0.08), 0 4px 16px rgba(0, 0, 0, 0.04);
}

[data-theme="light"] .glass-card:hover {
  border-color: rgba(59, 130, 246, 0.3);
  box-shadow: 0 12px 40px rgba(59, 130, 246, 0.12), 0 8px 24px rgba(0, 0, 0, 0.06);
}

/* Service cards with different accent colors */
[data-theme="light"] .service-card:nth-child(1) {
  background: var(--gradient-emerald);
  border-color: rgba(5, 150, 105, 0.2);
}

[data-theme="light"] .service-card:nth-child(1):hover {
  border-color: rgba(5, 150, 105, 0.4);
}

[data-theme="light"] .service-card:nth-child(2) {
  background: var(--gradient-violet);
  border-color: rgba(124, 58, 237, 0.2);
}

[data-theme="light"] .service-card:nth-child(2):hover {
  border-color: rgba(124, 58, 237, 0.4);
}

[data-theme="light"] .service-card:nth-child(3) {
  background: var(--gradient-amber);
  border-color: rgba(217, 119, 6, 0.2);
}

[data-theme="light"] .service-card:nth-child(3):hover {
  border-color: rgba(217, 119, 6, 0.4);
}

/* Dark Theme - Enhanced with Colors */
[data-theme="dark"] {
  --color-background: #000000;
  --color-surface: #111111;
  --color-text: #ffffff;
  --color-text-secondary: #a1a1aa;
  --color-border: rgba(255, 255, 255, 0.1);
  
  /* Enhanced color palette for dark mode */
  --color-accent-blue: #60a5fa;
  --color-accent-purple: #a78bfa;
  --color-accent-green: #34d399;
  --color-accent-orange: #fbbf24;
  --color-accent-pink: #f472b6;
  --color-accent-teal: #2dd4bf;
  --color-accent-indigo: #818cf8;
  --color-accent-cyan: #22d3ee;
  --color-accent-emerald: #10b981;
  --color-accent-rose: #fb7185;
  --color-accent-violet: #8b5cf6;
  --color-accent-amber: #f59e0b;
  
  --glass-bg: rgba(255, 255, 255, 0.05);
  --glass-border: rgba(255, 255, 255, 0.1);
  --glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  
  /* Enhanced colorful gradients for dark theme */
  --gradient-hero: linear-gradient(135deg, rgba(0, 0, 0, 0.95) 0%, rgba(17, 17, 17, 0.9) 100%);
  --gradient-blue: linear-gradient(135deg, rgba(96, 165, 250, 0.15) 0%, rgba(59, 130, 246, 0.08) 100%);
  --gradient-purple: linear-gradient(135deg, rgba(167, 139, 250, 0.15) 0%, rgba(139, 92, 246, 0.08) 100%);
  --gradient-green: linear-gradient(135deg, rgba(52, 211, 153, 0.15) 0%, rgba(16, 185, 129, 0.08) 100%);
  --gradient-orange: linear-gradient(135deg, rgba(251, 191, 36, 0.15) 0%, rgba(245, 158, 11, 0.08) 100%);
  --gradient-pink: linear-gradient(135deg, rgba(244, 114, 182, 0.15) 0%, rgba(236, 72, 153, 0.08) 100%);
  --gradient-teal: linear-gradient(135deg, rgba(45, 212, 191, 0.15) 0%, rgba(20, 184, 166, 0.08) 100%);
  --gradient-indigo: linear-gradient(135deg, rgba(129, 140, 248, 0.15) 0%, rgba(99, 102, 241, 0.08) 100%);
  --gradient-cyan: linear-gradient(135deg, rgba(34, 211, 238, 0.15) 0%, rgba(6, 182, 212, 0.08) 100%);
  --gradient-emerald: linear-gradient(135deg, rgba(16, 185, 129, 0.15) 0%, rgba(5, 150, 105, 0.08) 100%);
  --gradient-rose: linear-gradient(135deg, rgba(251, 113, 133, 0.15) 0%, rgba(244, 63, 94, 0.08) 100%);
  --gradient-violet: linear-gradient(135deg, rgba(139, 92, 246, 0.15) 0%, rgba(124, 58, 237, 0.08) 100%);
  --gradient-amber: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(217, 119, 6, 0.08) 100%);
}

/* Scrollbar Styling */
::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background: var(--color-background);
}

::-webkit-scrollbar-thumb {
  background: var(--gradient-primary);
  border-radius: var(--radius-full);
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-gold-600);
}

/* Selection */
::selection {
  background: rgba(245, 158, 11, 0.3);
  color: var(--color-text);
}

/* Container */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 var(--space-6);
}

@media (max-width: 768px) {
  .container {
    padding: 0 var(--space-4);
  }
}

/* Welcome Screen */
.welcome-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: var(--color-black);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  transition: opacity 0.5s ease-out, visibility 0.5s ease-out;
}

.welcome-screen.hidden {
  opacity: 0;
  visibility: hidden;
}

.welcome-content {
  text-align: center;
}

.welcome-title {
  font-family: var(--font-display);
  font-size: 3rem;
  font-weight: 700;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: var(--space-4);
  animation: fadeInUp 1s ease-out;
}

.welcome-subtitle {
  font-size: 1.25rem;
  color: var(--color-grey);
  margin-bottom: var(--space-8);
  animation: fadeInUp 1s ease-out 0.3s both;
}

.welcome-loader {
  display: flex;
  justify-content: center;
  gap: var(--space-2);
}

.loader-ring {
  width: 12px;
  height: 12px;
  border: 2px solid transparent;
  border-top: 2px solid var(--color-gold-500);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loader-ring:nth-child(2) {
  animation-delay: 0.1s;
}

.loader-ring:nth-child(3) {
  animation-delay: 0.2s;
}

/* Navigation */
.navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background: rgba(15, 23, 42, 0.9);
  backdrop-filter: var(--glass-blur);
  border-bottom: 1px solid var(--glass-border);
  z-index: var(--z-fixed);
  transition: all var(--transition-normal);
}

.navbar.scrolled {
  background: rgba(15, 23, 42, 0.95);
  box-shadow: var(--shadow-lg);
}

.nav-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--space-4) 0;
  max-width: 1200px;
  margin: 0 auto;
  padding-left: var(--space-6);
  padding-right: var(--space-6);
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: var(--space-4);
}

/* Theme Toggle */
.theme-toggle {
  width: 44px;
  height: 44px;
  border: none;
  border-radius: var(--radius-full);
  background: var(--glass-bg);
  backdrop-filter: var(--glass-blur);
  border: 1px solid var(--glass-border);
  color: var(--color-text);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-normal);
  font-size: 1.25rem;
}

.theme-toggle:hover {
  background: var(--glass-border);
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.theme-toggle:active {
  transform: translateY(0);
}

.theme-icon {
  transition: transform var(--transition-normal);
}

.theme-toggle:hover .theme-icon {
  transform: rotate(20deg);
}

.nav-brand {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

.brand-logo {
  width: 48px;
  height: 48px;
  background: var(--gradient-primary);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: var(--font-display);
  font-weight: 700;
  font-size: 1.25rem;
  color: var(--color-white);
  box-shadow: var(--shadow-glow);
}

.brand-text {
  display: flex;
  flex-direction: column;
}

.brand-name {
  font-family: var(--font-display);
  font-weight: 600;
  font-size: 1.25rem;
  color: var(--color-white);
}

.brand-tagline {
  font-size: 0.75rem;
  color: var(--color-grey);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.nav-menu {
  display: flex;
  align-items: center;
  gap: var(--space-8);
}

.nav-link {
  color: var(--color-grey);
  text-decoration: none;
  font-weight: 500;
  font-size: 0.9rem;
  position: relative;
  transition: all var(--transition-normal);
  padding: var(--space-2) 0;
}

.nav-link:hover,
.nav-link.active {
  color: var(--color-white);
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 0;
  height: 2px;
  background: var(--gradient-primary);
  transition: width var(--transition-normal);
}

.nav-link:hover::after,
.nav-link.active::after {
  width: 100%;
}

.nav-cta {
  background: var(--gradient-primary);
  color: var(--color-white) !important;
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-full);
  box-shadow: var(--shadow-glow);
  transition: all var(--transition-normal);
}

.nav-cta:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-glow), var(--shadow-lg);
}

.nav-cta::after {
  display: none;
}

.nav-toggle {
  display: none;
  flex-direction: column;
  cursor: pointer;
  gap: 4px;
}

.nav-toggle span {
  width: 25px;
  height: 2px;
  background: var(--color-white);
  transition: all var(--transition-normal);
}

/* Hero Section */
.hero {
  position: relative;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.hero-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--color-black) 0%, var(--color-blue-900) 100%);
  background-image: 
    url('https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?w=1920&h=1080&fit=crop&q=80');
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--gradient-hero);
}

.hero-particles {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: 
    radial-gradient(circle at 20% 80%, rgba(245, 158, 11, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 20%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(255, 255, 255, 0.05) 0%, transparent 50%);
  animation: float 20s ease-in-out infinite;
}

.hero-content {
  position: relative;
  z-index: 2;
  text-align: center;
  max-width: 800px;
  padding: 0 var(--space-6);
}

.hero-title {
  font-family: var(--font-display);
  font-size: clamp(2rem, 5vw, 3rem); /* Reduced from clamp(2.5rem, 6vw, 4rem) */
  font-weight: 800;
  line-height: 1.1;
  margin-bottom: var(--space-6);
}

.title-line {
  display: block;
}

.gradient-text {
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  text-shadow: var(--shadow-glow);
}

.hero-subtitle {
  font-size: clamp(0.9rem, 1.8vw, 1.1rem); /* Reduced from clamp(1rem, 2vw, 1.25rem) */
  color: var(--color-grey);
  margin-bottom: var(--space-10);
  line-height: 1.6;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.hero-buttons {
  display: flex;
  gap: var(--space-4);
  justify-content: center;
  flex-wrap: wrap;
}

.hero-scroll {
  position: absolute;
  bottom: var(--space-8);
  left: 50%;
  transform: translateX(-50%);
  z-index: 2;
}

.scroll-indicator {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-2);
  color: var(--color-grey);
  font-size: 0.875rem;
  animation: bounce 2s infinite;
}

.scroll-arrow {
  width: 20px;
  height: 20px;
  border-right: 2px solid var(--color-gold-500);
  border-bottom: 2px solid var(--color-gold-500);
  transform: rotate(45deg);
}

/* Buttons */
.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-3) var(--space-6);
  border: none;
  border-radius: var(--radius-full);
  font-family: var(--font-primary);
  font-weight: 600;
  font-size: 1rem;
  text-decoration: none;
  cursor: pointer;
  position: relative;
  overflow: hidden;
  transition: all var(--transition-normal);
  min-width: 140px;
}

.btn-primary {
  background: var(--gradient-primary);
  color: var(--color-white);
  box-shadow: var(--shadow-glow);
}

.btn-primary:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-glow), var(--shadow-xl);
}

.btn-secondary {
  background: transparent;
  color: var(--color-white);
  border: 2px solid var(--glass-border);
  backdrop-filter: var(--glass-blur);
}

.btn-secondary:hover {
  background: var(--glass-bg);
  border-color: var(--color-gold-500);
  transform: translateY(-3px);
  box-shadow: var(--shadow-lg);
}

.btn-full {
  width: 100%;
}

.btn-glow {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.6s ease;
}

.btn:hover .btn-glow {
  left: 100%;
}

/* Glass Card */
.glass-card {
  background: var(--glass-bg);
  backdrop-filter: var(--glass-blur);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-xl);
  box-shadow: var(--glass-shadow);
  transition: all var(--transition-normal);
}

.glass-card:hover {
  transform: translateY(-5px);
  box-shadow: var(--glass-shadow), var(--shadow-xl);
  border-color: rgba(245, 158, 11, 0.3);
}

/* Section Styles */
section {
  padding: var(--space-24) 0;
  position: relative;
}

.section-header {
  text-align: center;
  margin-bottom: var(--space-16);
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;
}

.section-title {
  font-family: var(--font-display);
  font-size: clamp(1.5rem, 3vw, 2.2rem); /* Reduced from clamp(2rem, 4vw, 3rem) */
  font-weight: 700;
  margin-bottom: var(--space-4);
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.section-subtitle {
  font-size: 1rem; /* Reduced from 1.125rem */
  color: var(--color-grey);
  line-height: 1.6;
}

/* About Section */
.about {
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.5) 0%, rgba(30, 58, 138, 0.3) 100%);
}

/* Owner Section */
.owner {
  background: linear-gradient(135deg, rgba(30, 58, 138, 0.1) 0%, rgba(15, 23, 42, 0.3) 100%);
}

.owner-content {
  max-width: 1000px;
  margin: 0 auto;
}

.owner-card {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: var(--space-8); /* Reduced from var(--space-12) */
  padding: var(--space-8); /* Reduced from var(--space-12) */
  align-items: center;
}

.owner-image {
  position: relative;
  text-align: center;
}

.owner-image img {
  width: 250px; /* Reduced from 300px */
  height: 250px; /* Reduced from 300px */
  border-radius: var(--radius-2xl);
  object-fit: cover;
  border: 4px solid var(--glass-border);
  box-shadow: var(--shadow-xl);
  transition: all var(--transition-normal);
}

.owner-image:hover img {
  transform: scale(1.05);
  box-shadow: var(--shadow-glow), var(--shadow-xl);
}

.owner-badge {
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  background: var(--gradient-primary);
  color: var(--color-white);
  padding: var(--space-2) var(--space-4);
  border-radius: var(--radius-full);
  font-size: 0.875rem;
  font-weight: 600;
  box-shadow: var(--shadow-glow);
  white-space: nowrap;
}

.owner-info {
  padding: var(--space-4);
}

.owner-name {
  font-family: var(--font-display);
  font-size: 2rem; /* Reduced from 2.5rem */
  font-weight: 700;
  margin-bottom: var(--space-2);
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.owner-title {
  font-size: 1.1rem; /* Reduced from 1.25rem */
  color: var(--color-text-secondary);
  margin-bottom: var(--space-6);
  font-weight: 500;
}

.owner-description {
  margin-bottom: var(--space-8);
}

.owner-description p {
  color: var(--color-text-secondary);
  line-height: 1.7;
  margin-bottom: var(--space-4);
}

.owner-achievements {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-6);
}

.achievement {
  text-align: center;
  padding: var(--space-4);
  background: var(--glass-bg);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-lg);
  backdrop-filter: var(--glass-blur);
  transition: all var(--transition-normal);
}

.achievement:hover {
  transform: translateY(-5px);
  box-shadow: var(--shadow-lg);
  border-color: rgba(245, 158, 11, 0.3);
}

.achievement-number {
  display: block;
  font-family: var(--font-display);
  font-size: 1.6rem; /* Reduced from 2rem */
  font-weight: 800;
  color: var(--color-gold-500);
  margin-bottom: var(--space-1);
}

.achievement-label {
  font-size: 0.875rem;
  color: var(--color-text-secondary);
  font-weight: 500;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); /* Reduced from 250px */
  gap: var(--space-5); /* Reduced from var(--space-6) */
  margin-top: var(--space-12);
}

.stat-card {
  padding: var(--space-6); /* Reduced from var(--space-8) */
  text-align: center;
  position: relative;
}

.stat-number {
  font-family: var(--font-display);
  font-size: 2.2rem; /* Reduced from 3rem */
  font-weight: 800;
  color: var(--color-gold-500);
  margin-bottom: var(--space-2);
}

.stat-label {
  font-size: 1rem;
  color: var(--color-grey);
  margin-bottom: var(--space-4);
}

.stat-icon {
  font-size: 2rem;
  opacity: 0.3;
}

/* Services Section */
.services {
  background: rgba(15, 23, 42, 0.3);
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); /* Reduced from 350px */
  gap: var(--space-6); /* Reduced from var(--space-8) */
  margin-top: var(--space-12);
}

.service-card {
  padding: var(--space-6); /* Reduced from var(--space-8) */
  text-align: center;
  position: relative;
}

.service-icon {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 70px; /* Reduced from 80px */
  height: 70px; /* Reduced from 80px */
  margin-bottom: var(--space-5); /* Reduced from var(--space-6) */
  font-size: 1.8rem; /* Reduced from 2rem */
}

.icon-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--gradient-primary);
  border-radius: var(--radius-full);
  opacity: 0.1;
  transition: all var(--transition-normal);
}

.service-card:hover .icon-bg {
  opacity: 0.2;
  transform: scale(1.1);
}

.service-title {
  font-size: 1.3rem; /* Reduced from 1.5rem */
  font-weight: 700;
  margin-bottom: var(--space-4);
  color: var(--color-white);
}

.service-description {
  color: var(--color-grey);
  margin-bottom: var(--space-6);
  line-height: 1.6;
}

.service-features {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-2);
  justify-content: center;
}

.feature-tag {
  background: rgba(245, 158, 11, 0.1);
  color: var(--color-gold-500);
  padding: var(--space-1) var(--space-3);
  border-radius: var(--radius-full);
  font-size: 0.875rem;
  font-weight: 500;
  border: 1px solid rgba(245, 158, 11, 0.2);
}

/* Projects Section */
.projects {
  background: linear-gradient(135deg, rgba(30, 58, 138, 0.1) 0%, rgba(15, 23, 42, 0.5) 100%);
}

.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Reduced from 300px */
  gap: var(--space-5); /* Reduced from var(--space-6) */
  margin-top: var(--space-12);
}

.project-card {
  position: relative;
  border-radius: var(--radius-xl);
  overflow: hidden;
  transition: all var(--transition-normal);
}

.project-card:hover {
  transform: translateY(-10px);
  box-shadow: var(--shadow-xl);
}

.project-image {
  position: relative;
  height: 200px; /* Reduced from 250px */
  overflow: hidden;
}

.project-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: all var(--transition-slow);
}

.project-card:hover .project-image img {
  transform: scale(1.1);
}

.project-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(30, 58, 138, 0.6) 100%);
  display: flex;
  align-items: end;
  padding: var(--space-6);
  opacity: 0;
  transition: all var(--transition-normal);
}

.project-card:hover .project-overlay {
  opacity: 1;
}

.project-info h3 {
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: var(--space-2);
  color: var(--color-white);
}

.project-info p {
  color: var(--color-grey);
  margin-bottom: var(--space-3);
  font-size: 0.9rem;
}

.project-category {
  background: var(--gradient-primary);
  color: var(--color-white);
  padding: var(--space-1) var(--space-3);
  border-radius: var(--radius-full);
  font-size: 0.75rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* Testimonials Section */
.testimonials {
  background: rgba(15, 23, 42, 0.3);
}

.testimonials-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Reduced from 300px */
  gap: var(--space-5); /* Reduced from var(--space-6) */
  margin-top: var(--space-12);
}

.testimonial-card {
  padding: var(--space-6); /* Reduced from var(--space-8) */
  text-align: center;
}

.testimonial-content {
  margin-bottom: var(--space-6);
}

.testimonial-content p {
  font-size: 1rem; /* Reduced from 1.125rem */
  color: var(--color-grey);
  line-height: 1.6;
  font-style: italic;
  position: relative;
}

.testimonial-content p::before {
  content: '"';
  font-size: 2.5rem; /* Reduced from 3rem */
  color: var(--color-gold-500);
  position: absolute;
  top: -10px;
  left: -20px;
  font-family: serif;
}

.author-info h4 {
  font-size: 1rem;
  font-weight: 600;
  color: var(--color-white);
  margin-bottom: var(--space-1);
}

.author-info span {
  font-size: 0.875rem;
  color: var(--color-grey);
}

/* Quote Section */
.quote {
  background: linear-gradient(135deg, rgba(30, 58, 138, 0.2) 0%, rgba(15, 23, 42, 0.8) 100%);
}

.quote-container {
  max-width: 600px;
  margin: 0 auto;
}

.quote-form {
  padding: var(--space-10);
}

/* Careers Section */
.careers {
  background: rgba(15, 23, 42, 0.5);
}

.careers-content {
  max-width: 600px;
  margin: 0 auto;
}

.careers-info {
  padding: var(--space-6); /* Reduced from var(--space-10) */
  text-align: center;
}

.careers-info h3 {
  font-size: 1.3rem; /* Reduced from 1.5rem */
  font-weight: 700;
  margin-bottom: var(--space-6);
  color: var(--color-white);
}

.benefits-list {
  list-style: none;
  margin-bottom: var(--space-8);
}

.benefits-list li {
  color: var(--color-grey);
  margin-bottom: var(--space-2);
  position: relative;
  padding-left: var(--space-6);
}

.benefits-list li::before {
  content: '✓';
  color: var(--color-gold-500);
  font-weight: bold;
  position: absolute;
  left: 0;
}

/* Contact Section */
.contact {
  background: linear-gradient(135deg, rgba(15, 23, 42, 0.8) 0%, rgba(30, 58, 138, 0.4) 100%);
}

.contact-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-8); /* Reduced from var(--space-12) */
  align-items: start;
}

.contact-info {
  display: grid;
  gap: var(--space-6);
}

.contact-card {
  padding: var(--space-5); /* Reduced from var(--space-6) */
  text-align: center;
}

.contact-icon {
  font-size: 2rem;
  margin-bottom: var(--space-4);
}

.contact-card h3 {
  font-size: 1rem; /* Reduced from 1.125rem */
  font-weight: 600;
  margin-bottom: var(--space-2);
  color: var(--color-white);
}

.contact-card p {
  color: var(--color-grey);
  line-height: 1.5;
}

.contact-map {
  padding: var(--space-4);
}

.contact-form {
  padding: var(--space-6); /* Reduced from var(--space-8) */
}

.form-title {
  font-size: 1.3rem; /* Reduced from 1.5rem */
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: var(--space-6);
  text-align: center;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

/* Form Styles */
.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: var(--space-4);
}

.form-group {
  margin-bottom: var(--space-6);
}

.form-group label {
  display: block;
  margin-bottom: var(--space-2);
  font-weight: 500;
  color: var(--color-white);
  font-size: 0.9rem;
}

.form-group input,
.form-group select,
.form-group textarea {
  width: 100%;
  padding: var(--space-3);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-md);
  background: rgba(255, 255, 255, 0.05);
  color: var(--color-white);
  font-family: var(--font-primary);
  font-size: 1rem;
  transition: all var(--transition-normal);
  backdrop-filter: var(--glass-blur);
}

.form-group input:focus,
.form-group select:focus,
.form-group textarea:focus {
  outline: none;
  border-color: var(--color-gold-500);
  box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
  background: rgba(255, 255, 255, 0.1);
}

.form-group input::placeholder,
.form-group textarea::placeholder {
  color: var(--color-grey);
}

.form-group select {
  cursor: pointer;
}

.form-group textarea {
  resize: vertical;
  min-height: 120px;
}

/* Footer */
.footer {
  background: var(--color-black);
  border-top: 1px solid var(--glass-border);
  padding: var(--space-16) 0 var(--space-8) 0;
}

.footer-content {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: var(--space-12);
  margin-bottom: var(--space-12);
}

.footer-brand {
  display: flex;
  align-items: center;
  gap: var(--space-4);
}

.footer-brand .brand-logo {
  width: 50px; /* Reduced from 60px */
  height: 50px; /* Reduced from 60px */
  font-size: 1.3rem; /* Reduced from 1.5rem */
}

.footer-brand h3 {
  font-family: var(--font-display);
  font-size: 1.3rem; /* Reduced from 1.5rem */
  font-weight: 700;
  color: var(--color-white);
  margin-bottom: var(--space-1);
}

.footer-brand p {
  color: var(--color-grey);
  font-size: 0.9rem;
}

.footer-links {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--space-8);
}

.footer-column h4 {
  font-size: 1rem; /* Reduced from 1.125rem */
  font-weight: 600;
  color: var(--color-white);
  margin-bottom: var(--space-4);
}

.footer-column ul {
  list-style: none;
}

.footer-column ul li {
  margin-bottom: var(--space-2);
}

.footer-column ul li a {
  color: var(--color-grey);
  text-decoration: none;
  transition: color var(--transition-normal);
}

.footer-column ul li a:hover {
  color: var(--color-gold-500);
}

.social-links {
  display: flex;
  gap: var(--space-3);
  flex-wrap: wrap;
}

.social-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 44px;
  height: 44px;
  background: var(--glass-bg);
  border: 1px solid var(--glass-border);
  border-radius: var(--radius-md);
  color: var(--color-text-secondary);
  text-decoration: none;
  transition: all var(--transition-normal);
  backdrop-filter: var(--glass-blur);
}

.social-link:hover {
  background: var(--gradient-primary);
  color: var(--color-white);
  transform: translateY(-3px);
  box-shadow: var(--shadow-glow);
  border-color: transparent;
}

.social-link svg {
  width: 20px;
  height: 20px;
  transition: all var(--transition-normal);
}

.social-link:hover svg {
  transform: scale(1.1);
}

/* Platform-specific hover colors */
.social-link[aria-label="LinkedIn"]:hover {
  background: linear-gradient(135deg, #0077b5, #005885);
  box-shadow: 0 0 20px rgba(0, 119, 181, 0.3);
}

.social-link[aria-label="Facebook"]:hover {
  background: linear-gradient(135deg, #1877f2, #0d5dbf);
  box-shadow: 0 0 20px rgba(24, 119, 242, 0.3);
}

.social-link[aria-label="Instagram"]:hover {
  background: linear-gradient(135deg, #e4405f, #833ab4, #fcb045);
  box-shadow: 0 0 20px rgba(228, 64, 95, 0.3);
}

.social-link[aria-label="Twitter"]:hover {
  background: linear-gradient(135deg, #1da1f2, #0d8bd9);
  box-shadow: 0 0 20px rgba(29, 161, 242, 0.3);
}

.footer-bottom {
  text-align: center;
  padding-top: var(--space-8);
  border-top: 1px solid var(--glass-border);
}

.footer-bottom p {
  color: var(--color-grey);
  font-size: 0.9rem;
}

/* Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: var(--z-modal);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all var(--transition-normal);
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
