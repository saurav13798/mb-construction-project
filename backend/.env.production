# Production Environment Configuration - Optimized for Performance

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000

# Database Configuration (Update with your production MongoDB URI)
MONGODB_URI=mongodb://localhost:27017/mb_construction_prod

# Security Configuration
JWT_SECRET=your-super-secure-production-jwt-secret-minimum-32-characters-long

# CORS Configuration
FRONTEND_URL=https://yourdomain.com

# Rate Limiting (Optimized for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=150

# Email Configuration (Update with your production email settings)
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-production-app-password
EMAIL_FROM=noreply@mbconstruction.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Performance Configuration
COMPRESSION_LEVEL=6
CACHE_CONTROL_MAX_AGE=31536000

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=logs/production.log

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# Database Performance
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=2
DB_MAX_IDLE_TIME_MS=30000