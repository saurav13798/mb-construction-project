{
  "name": "mb-construction-backend",
  "version": "1.0.0",
  "description": "Backend API for MB Construction website",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "db:init": "node utils/database_init.js",
    "db:seed": "node utils/database_seeder.js",
    "db:backup": "node utils/database_manager.js backup",
    "db:restore": "node utils/database_manager.js restore",
    "db:reset": "node utils/database_manager.js reset",
    "db:optimize": "node utils/database_manager.js optimize",
    "db:validate": "node utils/database_manager.js validate",
    "db:stats": "node utils/database_manager.js stats",
    "setup": "npm install && npm run db:init && npm run db:seed"
  },
  "keywords": [
    "construction",
    "mongodb",
    "express",
    "api",
    "admin-dashboard",
    "jwt"
  ],
  "author": "MB Construction",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1"
    ,"compression": "^1.7.4"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
